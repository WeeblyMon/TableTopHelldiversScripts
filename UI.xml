<Panel id="mainPanel" rectAlignment="LowerCenter" width="220" height="60" color="#FFFFFF">
  <Button id="initiativeModificationButton" onClick="toggleInitiativeMenu" colors="#1E90FFFF #FFFFFF #87CEEBFF" fontSize="18" text="Initiative Modification Tool"/>

</Panel>

<Panel id="intiativeList" rectAlignment="LowerCenter" offsetXY="-250 0" width="220" height="60" color="#FFFFFF">
  <Button id="initiativeListButton" onClick="toggleInitiativeList" colors="#1E90FFFF #FFFFFF #87CEEBFF" fontSize="18" text="Initiative List"/>
    <!--Show current list of intiative sorted by highesest to lowest-->
    <!--plan to add delete button so it can delete-->
</Panel>

<Panel id="initiativeListMenu" rectAlignment="LowerCenter" offsetXY="-250 100" active="false" width="300" height="400" color="#FFFFFF">
  <VerticalLayout padding="10" spacing="5">
    <Text text="Initiative Modification Menu" color="#000000" fontSize="18"/>
  </VerticalLayout>
</Panel>


<Panel id="initiativeMenu" rectAlignment="LowerCenter" offsetXY="300 0" active="false" width="300" height="400" color="#FFFFFF">
  <VerticalLayout padding="10" spacing="5">
    <Text text="Initiative Register" color="#000000" fontSize="18"/>
    <InputField id="playerNameInput" placeholder="Player Name" fontSize="18"/>
    <InputField id="initiativeInput" placeholder="Initiative" fontSize="18"/>
    <Button id="registerPlayerButton" onClick="registerPlayer" text="Register Player" fontSize="18"/>
    <Button id="enemyInitiativeButton" onClick="openEnemyInitiaveMenu" text="Enemy Initiative Menu" fontSize="18"/>
    <!-- Close button for the menu -->
    <Button id="closeMenuButton" onClick="closeInitiativeMenu" text="Close" fontSize="18" color="#FF0000"/>
  </VerticalLayout>
</Panel>

<Panel id="enemyInitiativeMenu" rectAlignment="LowerCenter" offsetXY="610 0" active="false" width="300" height="400" color="#FFFFFF">
  <VerticalLayout padding="10" spacing="5">
    <Text text="Enemy Initiative Register" color="#000000" fontSize="18"/>
    <InputField id="enemyNameInput" placeholder="Enemy Type" fontSize="18"/>
    <InputField id="enemyinitiativeInput" placeholder="Initiative" fontSize="18"/>
    <Button id="registerEnemyButton" onClick="registerEnemy" text="Register Enemy" fontSize="18"/>
    <!-- Close button for the menu -->
    <Button id="closeMenuButton2" onClick="closeInitiativeMenu2" text="Close" fontSize="18" color="#FF0000"/>
  </VerticalLayout>
</Panel>
